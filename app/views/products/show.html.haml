%p#notice= notice
%p#error= flash[:error]

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category
  = product.category.name

- if current_user && product.user && current_user.email == product.user.email
  = link_to 'Edit', edit_category_product_path(category.id, product.id)
= link_to 'Back', category_products_path, class: 'btn btn-primary'
%br/
%br/
%h4 Reviews:
= render reviews
%br/
- if current_user
  %h4 Add a review
  = render 'reviews/form'
